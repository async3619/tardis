{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "plugins": [{ "transform": "typia/lib/transform" }],
        "strictNullChecks": true,
        "paths": {
            "@root/*": ["./src/*"],
            "@utils/*": ["./src/utils/*"]
        }
    }
}
